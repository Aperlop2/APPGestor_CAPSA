<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E1E1"
    tools:context=".MainActivity">

    <!-- Encabezado -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#4A90E2"
        android:padding="16dp">

        <!-- Botón de notificaciones -->
        <ImageButton
            android:id="@+id/btn_notifications"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_notificaciones"
            android:contentDescription="@string/notificaciones"
            tools:ignore="ImageContrastCheck,TouchTargetSizeCheck" />

        <!-- Espacio vacío para alinear -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- Icono engrane -->
        <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_engrane"
            android:contentDescription="@string/configuracion"
            tools:ignore="ImageContrastCheck,TouchTargetSizeCheck" />
    </LinearLayout>
    <!-- Título del panel -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/panel_del_administrador"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        tools:ignore="VisualLintOverlap" />
    <!-- Panel de tarjetas -->
    <GridLayout
        android:id="@+id/panel_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginTop="20dp"
        android:columnCount="2"
        android:padding="16dp"
        android:rowCount="2">

        <!-- Tarjeta 1 -->
        <Button
            android:id="@+id/btn_active_caregivers"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:background="#4C9BB8"
            android:text="@string/cuidadores_activos"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            tools:ignore="VisualLintButtonSize" />

        <!-- Tarjeta 2 -->
        <Button
            android:id="@+id/btn_pending_appointments"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:background="#4C9BB8"
            android:text="@string/citas_pendientes"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            tools:ignore="VisualLintButtonSize" />

        <!-- Tarjeta 3 -->
        <Button
            android:id="@+id/btn_recent_notifications"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:background="#4C9BB8"
            android:text="@string/notificaciones_recientes"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            tools:ignore="VisualLintButtonSize" />

        <!-- Tarjeta 4 -->
        <Button
            android:id="@+id/btn_completed_services"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:background="#4C9BB8"
            android:text="@string/servicios_completados"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            tools:ignore="VisualLintButtonSize" />
    </GridLayout>

    <!-- Botones inferiores -->
    <LinearLayout
        android:id="@+id/bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/panel_admin"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        tools:ignore="DisableBaselineAlignment">

        <!-- Botón Mapa -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/icon_map"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/mapa"
                android:src="@drawable/ic_mapa"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mapa1"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Botón Cuidadores -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/icon_caregivers"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_cuidadores"
                android:contentDescription="@string/cuidadores" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cuidadores1"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Botón Citas -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/icon_appointments"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_citas"
                android:contentDescription="@string/citas" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/citas1"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Botón Historial -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/icon_history"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/historial"
                android:src="@drawable/ic_historial"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/historial1"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
