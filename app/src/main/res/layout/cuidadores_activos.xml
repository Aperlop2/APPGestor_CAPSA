<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E1E1"
    tools:ignore="VisualLintTextFieldSize">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4A90E2"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/regresar"
            android:contentDescription="@string/regresar"
            tools:ignore="ImageContrastCheck,TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btn_available_caregivers"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/usuario_disponible"
            android:contentDescription="@string/cuidadores_disponibles"
            tools:ignore="ImageContrastCheck,TouchTargetSizeCheck" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cuidadores_activos"
        android:textSize="27sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        tools:ignore="VisualLintOverlap" />

    <SearchView
        android:id="@+id/search_caregivers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_margin="16dp"
        android:layout_marginTop="137dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:iconifiedByDefault="false"
        android:queryHint="Buscar cuidador activo" />

    <TextView
        android:id="@+id/tv_total_cuidadores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_caregivers"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/numero_de_cuidadores_activos"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="italic" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_total_cuidadores"
        android:layout_marginTop="16dp"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@android:color/holo_blue_light">

        <RelativeLayout
            android:id="@+id/card_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="#FFF8E1"
            android:elevation="4dp"
            android:padding="16dp"
            android:radius="8dp">

            <ImageView
                android:id="@+id/img_evidence"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:background="#E0E0E0"
                android:contentDescription="@string/evidencia_placeholder"
                android:scaleType="centerCrop"
                android:src="@drawable/evidencia"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/img_evidence"
                android:layout_marginStart="16dp"
                android:layout_alignTop="@id/img_evidence"
                android:text="@string/nombre_nombre_cuidador"
                android:textColor="#757575"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_toEndOf="@id/img_evidence"
                android:layout_marginStart="16dp"
                android:text="@string/estado_estado"
                android:textColor="#757575"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_status"
                android:layout_toEndOf="@id/img_evidence"
                android:layout_marginStart="16dp"
                android:text="@string/ubicacion_ubicacion"
                android:textColor="#757575"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_especialidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_location"
                android:layout_toEndOf="@id/img_evidence"
                android:layout_marginStart="16dp"
                android:text="@string/especialidad_especialidad"
                android:textColor="#757575"
                android:textStyle="bold"
                android:textSize="16sp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
